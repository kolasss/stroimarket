.ng-cloak
  .row
    .main_posts
      .row
        .col-xs-12(ng-show="currentPost")
          .thumbnail.post_big_thumb(back-img="{{currentPost.cover.large.url}}")
            .caption
              %h3 {{currentPost.title}}
              %p {{currentPost.intro}}
              %a.btn.btn-yellow(ng-href="{{linkToCurrentPost()}}" role="button")
                Подробнее
      .row
        .col-xs-3(ng-repeat='post in posts')
          .thumbnail.post_small_thumb(ng-class="{active: currentPost==post}" ng-click="setActive(post)")
            %img.img-rounded(ng-src="{{post.cover.thumb.url}}" alt="{{post.title}}")
            .caption
              %p {{post.title}}
  .row
    .col-md-12.products_carousel_col
      %h4(ng-show="popular.length > 0")
        Популярные товары →

      %products-carousel(products="popular")
