.ng-cloak
  %h1 Магазины

  .row
    .col-md-4(ng-repeat="store in stores")
      .thumbnail.store_thumbnail(back-img="{{store.header.url}}")
        / %img.img-rounded(ng-src="{{store.logo.url}}")
        .caption
          %h3 {{store.name}}
          %p {{store.title}}
          %p
            %a.btn.btn-blue(ng-href="{{stroiUtils.path_for('StoreMainCtrl', {store_slug: store.slug})}}")
