.ng-cloak
  .row.store_profile_header
    .header_background(back-img="{{currentStore.header.url}}")
    %img.logo.img-rounded(ng-src="{{currentStore.logo.url}}")
    .profile_menu
      %h1 {{currentStore.name}}
      %ul.nav.nav-pills
        %li
          %a(ng-href="") Главная
        %li
          %a(ng-href="") Каталог товаров
        %li
          %a(ng-href="") Услуги
        %li
          %a(ng-href="") О нас
        %li
          %a(ng-href="")
            %span.glyphicon.glyphicon-search
  .row.store_profile_body
    .col-md-3
      %dl.store_info
        %dt О нас
        %dd {{currentStore.info}}

        %dt.inner_header Контакты
        %dd {{currentStore.contacts}}

        %dt.inner_header Реквизиты
        %dd {{currentStore.requisites}}
        %dd {{currentStore.phone}}
        %dd
          %a(ng-href="http://{{currentStore.site}}") {{currentStore.site}}
        %dd
          %a(ng-href="mailto:{{currentStore.email}}") {{currentStore.email}}

    .col-md-9
      .row
        .col-md-4(ng-repeat="product in currentStore.products | filter:filter.query | priceRange:filter")
          .thumbnail
            %img(ng-src="{{product.cover.thumb.url}}")
            .caption
              %h3 {{product.title}}
              %p {{product.intro}}
              %span.label.label-success(ng-show="product.price") цена: {{product.price}} руб.
              %p
                %a.btn.btn-primary(href="#/products/{{product._id.$oid}}")
                  Подробнее

      %a.btn.btn-primary(back-button)
        Назад
