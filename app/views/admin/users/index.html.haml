.page-header
  %h1
    пользователи

    %small.control-links
      -# = icon_link 'plus-sign', new_admin_user_path

= link_to('новый пользователь', new_admin_user_path)
%table.table.table-hover
  %tr
    %th
      -# = sorting_link :name, label: localized_attribute(:user, :name)
      Имя
    %th(width="140")
      -# = sorting_link :role, label: localized_attribute(:user, :role)
      Роль
    %th(width="200")
      -# = localized_attribute(:user, :email)
      email
    %th(width="160")
      -# = sorting_link :created_at, label: localized_attribute(:user, :created_at)
      Дата создания
    %th(width="80")

  - @users.each do |user|
    %tr
      %td= link_to(user.name, admin_user_path(user))
      %td= user.role
      %td= mail_to user.email
      %td= l user.created_at, format: :short
      %td.control-links
        = icon_link 'pencil', edit_admin_user_path(user)
        = icon_link 'remove', admin_user_path(user), data: { method: :delete, confirm: t(:confirm_deletion) }

= paginate @users
