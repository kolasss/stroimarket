%header.navbar.navbar-default.navbar-static-top(role="navigation")
  .container-fluid
    .row
      .col-md-4.logowrapper
        %a.logo{ href: root_path }
          .logo_image
          %span.sitename= t 'sitename'
      .col-md-8
        = render 'search'
    .row
      .col-md-12
        .navbar-header
          %button.navbar-toggle(type="button" data-toggle="collapse" data-target="#mainnav")
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          / %a.navbar-brand(href="#")= t 'sitename'

        #mainnav.collapse.navbar-collapse
          = render 'nav'

          = render 'usermenu'
