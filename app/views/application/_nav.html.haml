      Каталог товаров
      %b.caret
    %ul.dropdown-menu.main_categories(categories-dropdown ng-class="alwaysOpen()")

  %li(ng-class="getClass('StoresCtrl', 'StoreMainCtrl', 'StoreCatalogCtrl', 'StoreServicesCtrl')")
    %a(href='#/stores')
