%form.navbar-form.navbar-left.search_form(role="search"
  data-ng-controller='SearchFormCtrl'
  ng-submit="submit(searchForm)"
  name="searchForm"
  novalidate)

  .form-group.has-feedback
    %input.form-control(ng-model="query" required type='text' name='search'){ placeholder: "Поиск" }
    %span.form-control-feedback(data-ng-click="submit(searchForm)")
      = fa_icon 'search'
